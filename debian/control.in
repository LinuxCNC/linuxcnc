    python@PYTHON_VERSION@-tk,
    python@PYTHON_VERSION@-gnome2 | python-gnome2,
    python@PYTHON_VERSION@-glade2 | python-glade2,
    python@PYTHON_VERSION@-numpy | python-numpy,
    python@PYTHON_VERSION@-imaging | python-imaging,
