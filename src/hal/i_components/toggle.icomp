component toggle "'push-on, push-off' from momentary pushbuttons";
pin in bit in "button input";
pin io bit out "on/off output";
param rw u32 debounce = 2 "debounce delay in periods";

variable int debounce_cntr;
variable int debounced;

function _ nofp;
license "GPL";
;;

FUNCTION(_)
{

    if (( debounce < 1 ) || ( debounce > 10000 )) {
	/* set a sane value, we don't want 2 million second delays */
	debounce = 2;
    }
    if ( in ) {
	/* pressed */
	debounce_cntr++;
	if ( debounce_cntr >= debounce ) {
	    debounce_cntr = debounce;
	    if ( debounced == 0 ) {
		/* toggle output */
		out = !out;
	    }
	    debounced = 1;
	}
    } else {
	/* not pressed */
	debounce_cntr--;
	if ( debounce_cntr <= 0 ) {
	    debounce_cntr = 0;
	    debounced = 0;
	}
    }

return 0;
}
