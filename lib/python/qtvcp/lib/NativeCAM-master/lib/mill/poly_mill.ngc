o<poly_mill> sub
(CALL data ptr[1], cut_start[2], cut_depth[3], compensation[4], show final cut[5], dx[6], dy[7], rot[8], tool eng pct[9], cx[10], cy[11])
(Author : Fernand Veilleux)

	o1 if [#<_tool_usage> GT 2]
		o<poly_mill> return
	o1 endif

(validate params first)
	o<poly_valid_1> if [#3 GT #2]
		(debug,Polyline: Invalid cut_depth - EXITING)
		(print,Polyline: Invalid cut_depth - EXITING)
		(AXIS,notify,Polyline: Invalid cut_depth - EXITING)
		M2
	o<poly_valid_1> endif

(set local params value)
	#<pds>        =  #1
	#<cut_start>  =  #2
	#<cut_depth>  =  #3
	#<comp>       =  #4
	#<show_final> =  #5
	#<dx>         =  #6
	#<dy>         =  #7
	#<rot>        =  #8
	#<tool_eng>   =  #9
	#<cx>         = #10
	#<cy>         = #11

	(get and save current coords system offsets)
	#<old_coord_system> = [#<_coord_system> / 10]
	o<get_offsets> CALL
	#<offset_x> = #<_offsets_x>
	#<offset_y> = #<_offsets_y>
	#<offset_z> = #<_offsets_z>
	#<offset_r> = #<_offsets_r>

	(change coords system)
	G#<_off_rot_coord_system>

	(rotate and apply offsets)
	o<rotate_xy> CALL [#<_offsets_x>] [#<_offsets_y>] [#<_offsets_x> + #<cx>] [#<_offsets_y> + #<cy>] [#<_offsets_r> + #<rot>]
	G10 L2 P#5220 X[#<_rotated_x> + #<dx>] Y[#<_rotated_y> + #<dy>] Z#<_offsets_z> R[#<_offsets_r> + #<rot>]
	
	o1001 if [#<cut_depth> EQ #<cut_start>]
		#<cut_step> = 0
	o1001 else
		#<cut_step> = [[#<cut_depth> - #<cut_start>] / FUP[[#<cut_depth> - #<cut_start>] / #<_depth_step>]]
	o1001 endif
	
	o<set_feed_rate_and_speed> CALL [#<tool_eng>]
	
	o<lead_in> CALL [#<pds>] [0] [#<comp>] [#<cut_start>] [-1]

	o<wh_00> while [#<_depth_reached> NE 0]
		o<set_next_cut_level> CALL [#<cut_depth>] [#<cut_step>]
		o<trace> CALL [#<pds>] [#<cut_depth>] [1]
		o<if_04> if [[#<_depth_reached> NE 0] AND [#<_poly_closed> EQ 0]]
			o<lead_in> CALL [#<pds>] [0] [#<comp>] [#<_cut_current_z>] [#<_depth_reached>]
		o<if_04> endif
	o<wh_00> endwhile

	/o<if_01> if [#<_show_final_cuts> AND #<show_final>]
		/o<if_02> if [#<_show_bottom_cut>]
			/o<lead_in> CALL [#<pds>] [0] [40] [#<cut_depth>]
			/o<trace> CALL [#<pds>] [#<cut_depth>]
		/o<if_02> endif
		/o<lead_in> CALL [#<pds>] [0] [40] [#<cut_start>]
		/o<trace> CALL [#<pds>] [#<cut_start>]
	/o<if_01> endif

	G0 Z#<_rapid_z>
	G40

	o240 if [#<_spindle_all_time> EQ 0]
		M9 M5
	o240 endif

	(restore coordinate system)
	G#<old_coord_system>
	G10 L2 P#5220 X#<offset_x> Y#<offset_y> Z#<offset_z> R#<offset_r>
	
o<poly_mill> endsub
