style "sbstyle" = "default"
{
    xthickness = 2
    ythickness = 2
    engine "xfce"
    {
        smooth_edge = true
        grip_style = none
        boxfill
        {
            fill_style = gradient
            orientation = automatic
            shade_start = 1.25
            shade_end = 1.00
        }
    }
}
