		image
		{
		    function			= BOX
		    detail				= "buttondefault"
		    recolorable			= TRUE
		    file				= "Buttons/button-default.png"
#		    border				= { 15,15,12,12 }
#		    border				= { 12,12,8,8 }
#		    border				= { 10,10,10,10 }
		    stretch				= TRUE
		}
		
		# Button (mouse over)
		image
		{
			function			= BOX
		    state				= PRELIGHT
		    recolorable			= TRUE
		    file				= "Buttons/button-prelight.png"
		    border				= { 15,15,12,12 }
#		    border				= { 12,12,8,8 }
#		    border				= { 10,10,10,10 }

		    stretch				= TRUE
		}
		
		# Button (pressed)
		image
		{
		    function			= BOX
		    state				= ACTIVE
		    file				= "Buttons/button-pressed.png"
		    border				= { 15,15,12,12 }
#		    border				= { 10,10,10,10 }
#		    border				= { 12,12,8,8 }
		    stretch				= TRUE
		}	
		
		# Button (disabled = user can't click)
		image 
		{
		    function			= BOX
		    state				= INSENSITIVE
		    file				= "Buttons/button-insensitive.png"
		    border				= { 15,15,12,12 }
#		    border				= { 10,10,10,10 }
#		    border				= { 12,12,8,8 }
		    stretch				= TRUE
		}
		
		# Button (normal)
		image 
		{
		    function			= BOX
		    file				= "Buttons/button-normal.png"		
		    border				= { 15,15,12,12 }
#		    border				= { 10,10,10,10 }
