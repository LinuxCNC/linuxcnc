            overlay_stretch = FALSE
        }
		
		# Unchecked 
 		image 
		{
            function        = CHECK
            recolorable     = TRUE
            state 			= INSENSITIVE
            shadow          = OUT
            overlay_file    = "Check-Radio/check1.png"
            overlay_stretch = FALSE
        }

		# Checked
		image 
		{
            function        = CHECK
            recolorable     = TRUE
	    	state 			= NORMAL
