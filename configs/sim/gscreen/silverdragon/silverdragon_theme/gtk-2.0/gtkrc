            function        = CHECK
            recolorable     = TRUE
	    	state 			= ACTIVE
            shadow          = IN
            overlay_file    = "Check-Radio/check4.png"
            overlay_stretch = FALSE
        }

		# Unchecked
     	image 
		{
            function        = CHECK
            recolorable     = TRUE
	    	state			= INSENSITIVE
            shadow          = IN
            overlay_file    = "Check-Radio/check1.png"
            overlay_stretch = FALSE
