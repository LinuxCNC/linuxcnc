checkshape result

checknbshapes result -solid 1 -shell 1 -face 9 -wire 9 -edge 17 -vertex 9 -shape 47

set tolres [checkmaxtol result]

if { ${tolres} > 0.0001} {
   puts "Error: bad tolerance of result"
}

checkprops result -v 12052 -deps 1.e-7

