//=======================================================================
//function : MakeWire
//purpose  : Make an empty wire
//=======================================================================

inline void TopoDS_Builder::MakeWire (TopoDS_Wire& W) const
{
  Handle(TopoDS_TWire) TW = new TopoDS_TWire();
  MakeShape(W,TW);
}


