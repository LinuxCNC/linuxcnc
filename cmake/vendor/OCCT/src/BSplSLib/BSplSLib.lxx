//=======================================================================
//function : CoefsD0
//purpose  : 
//=======================================================================

inline void BSplSLib::CoefsD0(const Standard_Real U, 
			      const Standard_Real V, 
			      const TColgp_Array2OfPnt& Poles, 
			      const TColStd_Array2OfReal* Weights, 
			      gp_Pnt& Point)
{
  BSplSLib::CacheD0(U, V,
		    Poles.RowLength() - 1, Poles.ColLength() - 1, 
		    0., 0., 1., 1.,
		    Poles, Weights, Point);
}

