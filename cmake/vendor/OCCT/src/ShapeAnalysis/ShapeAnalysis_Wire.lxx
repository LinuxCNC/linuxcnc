//=======================================================================
//function : IsLoaded
//purpose  : 
//=======================================================================

inline Standard_Boolean ShapeAnalysis_Wire::IsLoaded() const
{
  return ! myWire.IsNull() && myWire->NbEdges() >0;
}

 
//=======================================================================
//function : IsReady
//purpose  : 
//=======================================================================

inline Standard_Boolean ShapeAnalysis_Wire::IsReady() const
{
  return IsLoaded() && !myFace.IsNull();
}

 
